                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group text-right">
                                            <label>تصنيف هذة الشركة</label>
                                            <InputSelect @bind-Value="madel.isCompany" class="form-control">
                                                @foreach (IsCompany item in Enum.GetValues(typeof(IsCompany)))
