                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="rightdv">
                            <div class="modal-body text-right">
                                <h4 class="text-dark">
